@model SurveysApp.Models.Category
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-info">Delete Category</h2>
<br />

@if (TempData.ContainsKey("StatusMessage"))
{
    Html.RenderPartial("_StatusMessagePartial", TempData["StatusMessage"]);
}
@using (Html.BeginForm("Delete", "Category", FormMethod.Post, new { @id = "CategoryForm", @class = "mt-4" }))
{
    @Html.AntiForgeryToken()

    <div class="backgroundWhite border">
        <div class="form-group row">
            <div class="col-2 text-right">
                @Html.LabelFor(m => m.Name)
            </div>
            <div class="col-5">
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", @disabled = true } })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                @{ Html.RenderPartial("_DeleteAndBackToListButton"); }
            </div>
        </div>
    </div>
}

