@model SurveysApp.Models.Category
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-info">Category Details</h2>
<br />

<div class="backgroundWhite border">
    <div class="form-group row">
        <div class="col-2 text-right">
            @Html.LabelFor(m => m.Name)
        </div>
        <div class="col-5">
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", @disabled = true } })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-5 offset-2">
            @{ Html.RenderPartial("_DetailsAndBackToListButton", Model.Id); }
        </div>
    </div>
</div>
