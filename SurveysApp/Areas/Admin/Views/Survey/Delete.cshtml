@model SurveysApp.Models.Survey

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{

    int index = 0;
}


<br />
<h2 class="text-info">Delete Survey</h2>
<br />

<div class="backgroundWhite border row">
    <div class="col-12">
        @using (Html.BeginForm("Delete", "Survey", FormMethod.Post, new { @class = "mt-4" }))
        {
            @Html.AntiForgeryToken()

            <!--<div class="backgroundWhite border">-->
            <div class="form-group row">
                <div class="col-2 text-right">
                    @Html.LabelFor(m => m.Name)
                </div>
                <div class="col-5">
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", @disabled = true } })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2 text-right">
                    @Html.LabelFor(m => m.CategoryId)
                </div>
                <div class="col-5">
                    @Html.EditorFor(m => m.Category.Name, new { htmlAttributes = new { @class = "form-control", disabled = true } })
                </div>
            </div>

            <div id="QuestionsContainer">


                @foreach (var question in Model.Questions)
                {
                    <div class="form-group row">
                       <div class="col-2 text-right">
                            @Html.Label($"Survey.Question[{index}].Id", "Question " + (index + 1))
                        </div>
                        <div class="col-5">

                            @Html.Editor($"Survey.Questions[{index}].Content", new { htmlAttributes = new { Value = question.Content, @class = "form-control", disabled = true } })
                        </div>

                       
                    </div>

                    index += 1;
                }


                <div class="form-group row">
                    <div class="col-5 offset-2">
                        <div class="row">
                            <div class="col-6">
                                <input type="submit" value="Delete" class="btn btn-danger form-control" />
                            </div>
                            
                            <div class="col-6">
                                <a class="btn btn-success form-control" href="@Url.Action("Index")">Back To List</a>

                            </div>
                        </div>
                    </div>
                </div>
                <!--</div>-->
                
            </div>
        }
    </div>
        
</div>

