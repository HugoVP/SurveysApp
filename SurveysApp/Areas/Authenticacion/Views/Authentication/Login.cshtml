

@model SurveysApp.Models.Forms.UserLoginViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Login</h2>
<br />


@using (Html.BeginForm("Login", "Authentication", FormMethod.Post, new { @id = "RegisterForm", @class = "mt-4" }))
{
    @Html.AntiForgeryToken()

<div class="backgroundWhite border">
    <div class="form-group row">
        <div class="col-2 text-right">
            @Html.LabelFor(m => m.Email)
        </div>
        <div class="col-5">
            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
    </div>

    <div class="form-group row">
        <div class="col-2 text-right">
            @Html.LabelFor(m => m.Password)
        </div>
        <div class="col-5">
            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
    </div>

    <div class="form-group row">
        <div class="col-5 offset-2">
            @*@{ Html.RenderPartial("_CreateAndBackToListButton"); }*@
            <div class="row">
                <div class="col-6">
                    <input type="submit" value="Login" class="btn btn-info form-control" />
                </div>
                <div class="col-6">
                    <a class="btn btn-success form-control" href="@Url.Action("Register")">Go to Register</a>
                </div>
            </div>
        </div>
    </div>
</div>
}

