

@model SurveysApp.Forms.UserSignInViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Register</h2>
<br />


@*@if (Model != null && Model.StatusMessage != null)*@
@if (TempData.ContainsKey("StatusMessage"))
{
    Html.RenderPartial("_StatusMessagePartial", TempData["StatusMessage"]);
}
@using (Html.BeginForm("Register", "Authentication", FormMethod.Post, new { @id = "RegisterForm", @class = "mt-4" }))
{
    @Html.AntiForgeryToken()

    <div class="backgroundWhite border">
        <div class="form-group row">
            <div class="col-2 text-right">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="col-5">
                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
            </div>


        </div>

        <div class="form-group row">
            <div class="col-2 text-right">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="col-5">
                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
            </div>


        </div>

        <div class="form-group row">
            <div class="col-2 text-right">
                @Html.LabelFor(m => m.ConfirmPassword)
            </div>
            <div class="col-5">
                @Html.EditorFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "text-danger" })
            </div>


        </div>

        <div class="form-group row">
            <div class="col-2 text-right">
                @Html.LabelFor(m => m.FirstName)
            </div>
            <div class="col-5">
                @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.FirstName, null, new { @class = "text-danger" })
            </div>


        </div>

        <div class="form-group row">
            <div class="col-2 text-right">
                @Html.LabelFor(m => m.LastName)
            </div>
            <div class="col-5">
                @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.LastName, null, new { @class = "text-danger" })
            </div>


        </div>

        <div class="form-group row">
            <div class="col-2 text-right">
                @Html.LabelFor(m => m.Gender)
            </div>
            <div class="col-5">
                @Html.EnumDropDownListFor(m => m.Gender, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Gender, null, new { @class = "text-danger" })
            </div>


        </div>

        <hr />

        <div class="form-group row">
            <div class="col-5 offset-2">
                @*@{ Html.RenderPartial("_CreateAndBackToListButton"); }*@
                <div class="row">
                    <div class="col-6">
                        <input type="submit" value="Register" class="btn btn-info form-control" />
                    </div>
                    <div class="col-6">
                        <a class="btn btn-success form-control" href="@Url.Action("Login")">Go to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}