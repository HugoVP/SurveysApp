@model int?

<td style="width: 150px;">
    <div class="btn-group" role="group">

        <a class="btn btn-primary text-white" href="@Url.Action("Edit", new { @Id = Model })">
            <i class="fas fa-edit"></i>
        </a>

        <a class="btn btn-success text-white" href="@Url.Action("Details", new { @Id = Model })">
            <i class="fas fa-list-alt"></i>
        </a>

        <a class="btn btn-danger text-white" href="@Url.Action("Delete", new { @Id = Model })" >
            <i class="fas fa-trash-alt"></i>
        </a>
    </div>
</td>